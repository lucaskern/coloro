<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Color</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
    <nav><a href="/login"></a>
        <div id="title">
            <h1> Coloro </h1>
        </div>
        <div class="navlink"><a href="/logout">Log out</a></div>
    </nav>
  <section id="passchange">
    <form id="passchangeForm" name="passchangeForm" action="/passchange" method="POST" class="mainForm">
      <label for="pass">New Password: </label>
      <input id="pass" type="password" name="pass" placeholder="password"/>
      <label for="pass2">New Password Again: </label>
      <input id="pass2" type="password" name="pass2" placeholder="retype password"/>
        <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input class="formSubmit" type="submit" value="Sign Up" />
    </form>
  </section>
  <div id="domoMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="domo" src="assets/img/domo.png" alt="domo"/>
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>